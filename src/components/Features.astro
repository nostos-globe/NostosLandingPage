
---
const features = [
  {
    title: "User Accounts",
    description: "Register, log in, and recover your password to manage your personal space",
    icon: "📝"
  },
  {
    title: "Photo Albums",
    description: "Create and organize albums with multiple photo uploads and privacy controls",
    icon: "📸"
  },
  {
    title: "Explore Albums",
    description: "Discover public albums and enjoy content shared by the community",
    icon: "🧭"
  },
  {
    title: "Social Interactions",
    description: "Follow users, like albums, and engage with the travel community",
    icon: "🗣"
  },
  {
    title: "Notifications Center",
    description: "Get real-time updates when users interact with your content",
    icon: "🔔"
  },
  {
    title: "Interactive Travel Globe",
    description: "Explore your visited locations on a beautiful 3D world map",
    icon: "🌍"
  },
  {
    title: "Travel Timeline",
    description: "Visualize your trips and memories chronologically along your adventures",
    icon: "🗓"
  },
  {
    title: "World Travel Stats",
    description: "Track the percentage of the world you have explored",
    icon: "📊"
  }
];
---

<section id="features" class="features section relative overflow-hidden bg-slate-50 ">
  <div class="container relative z-10">
    <div class="text-center mb-6 pt-32">
      <h2 class="text-3xl md:text-4xl font-bold text-slate-900 font-outfit" data-aos="fade-up">Features You'll Love</h2>
    </div>
    <div class="features-wrapper relative">
      <div class="absolute left-0 w-32 h-full bg-gradient-to-r from-slate-50 to-transparent z-10"></div>
      <div class="absolute right-0 w-32 h-full bg-gradient-to-l from-slate-50 to-transparent z-10"></div>
      <div class="features-track flex gap-8 animate-scroll">
        {[...features, ...features].map((feature) => (
          <div class="feature-card min-w-[300px] my-12 p-6 backdrop-blur-sm bg-white/80 hover:bg-white transition-all duration-300 rounded-xl">
            <span class="text-4xl mb-4 block">{feature.icon}</span>
            <h3 class="text-xl font-semibold text-slate-900 mb-3 font-outfit">{feature.title}</h3>
            <p class="text-slate-600 font-outfit font-light">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  .features-track {
    animation: scroll 20s linear infinite;
  }

  .features-wrapper {
    overflow: hidden;
    position: relative;
    padding: 1rem 0;
  }
</style>